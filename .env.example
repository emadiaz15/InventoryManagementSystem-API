# --- Django Core Settings ---
SECRET_KEY=your-secret-key-here
DJANGO_SETTINGS_MODULE=inventory_management.settings.local

# --- Email SMTP Settings (desarrollo o producción) ---
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# --- Base de Datos ---
DATABASE_URL=postgresql://user:password@host:port/dbname

# --- API externa FastAPI (Drive Service) ---
DRIVE_API_BASE_URL=http://localhost:8001
DRIVE_SHARED_SECRET=your-shared-secret-key-here

# --- Redis / Celery Settings ---
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# --- Allowed Hosts (Separados por coma ",") ---
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# --- CORS (Opcional: si controlas los orígenes permitidos vía env) ---
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# --- CSRF Trusted Origins (Opcional en producción) ---
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
