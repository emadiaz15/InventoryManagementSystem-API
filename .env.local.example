# .env.local.example

# üîê Django
SECRET_KEY=<your-django-secret-key>
DJANGO_SETTINGS_MODULE=inventory_management.settings.local
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# üìß Email dev (opcional)
DJANGO_EMAIL_HOST_USER=<your-email@example.com>
DJANGO_EMAIL_HOST_PASSWORD=<your-email-password>

# üîÅ Redis / Celery
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# üåê CORS y CSRF para desarrollo
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173,http://127.0.0.1:5173,http://127.0.0.1:4173
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:4173,http://127.0.0.1:5173,http://127.0.0.1:4173

# ‚öôÔ∏è Motor de base de datos local
USE_SQLITE=true
PORT=8000

# üß† OpenAI (opcional)
OPENAI_API_KEY=<your-openai-api-key>

# üì¶ MinIO (Almacenamiento S3 local)
AWS_ACCESS_KEY_ID=<minio-access-key>
AWS_SECRET_ACCESS_KEY=<minio-secret-key>
AWS_PRODUCT_BUCKET_NAME=files-products
AWS_PROFILE_BUCKET_NAME=img-profiles
AWS_S3_ENDPOINT_URL=http://minio:9000
AWS_S3_REGION_NAME=us-east-1
MINIO_PUBLIC_URL=http://localhost:9000

# üîê Secret compartido para API externa
DRIVE_SHARED_SECRET=<your-shared-secret>

# üõ°Ô∏è Extensiones permitidas para subida de archivos
ALLOWED_UPLOAD_EXTENSIONS=.jpg,.jpeg,.png,.webp,.pdf,.mp4,.mov,.avi,.mkv
