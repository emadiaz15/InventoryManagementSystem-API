# .env.production.example

# --- Django Core Settings ---
SECRET_KEY=<your-production-secret-key>
DJANGO_SETTINGS_MODULE=inventory_management.settings.production

# --- Base de Datos Railway Production ---
DATABASE_URL=postgresql://<db-user>:<db-password>@<db-host>:<db-port>/<db-name>

# --- Redis / Celery Settings Production ---
REDIS_URL=redis://<redis-user>:<redis-password>@<redis-host>:<redis-port>/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# --- API externa FastAPI (Drive Service en Producci√≥n) ---
DRIVE_API_BASE_URL=https://<drive-service-domain>
DRIVE_SHARED_SECRET=<your-shared-secret-key>

# --- Allowed Hosts Production ---
DJANGO_ALLOWED_HOSTS=<your-production-domain.com>,www.<your-production-domain.com>,healthcheck.railway.app

# --- CORS Production ---
DJANGO_CORS_ALLOWED_ORIGINS=https://<your-frontend-domain.com>

# --- CSRF Trusted Origins Production ---
DJANGO_CSRF_TRUSTED_ORIGINS=https://<your-frontend-domain.com>

# --- AWS S3 / MinIO (opcional) ---
AWS_ACCESS_KEY_ID=<your-s3-access-key>
AWS_SECRET_ACCESS_KEY=<your-s3-secret-key>
AWS_S3_ENDPOINT_URL=https://<your-s3-endpoint>
AWS_S3_REGION_NAME=<your-s3-region>
AWS_S3_CUSTOM_DOMAIN=<your-cdn-domain-or-bucket-url>
AWS_PRODUCT_BUCKET_NAME=<your-product-bucket>
AWS_PROFILE_BUCKET_NAME=<your-profile-bucket>

# --- Email SMTP (opcional) ---
EMAIL_HOST_USER=<your-smtp-user>
EMAIL_HOST_PASSWORD=<your-smtp-password>

# --- File Uploads Allowed Extensions ---
ALLOWED_UPLOAD_EXTENSIONS=.jpg,.jpeg,.png,.webp,.pdf,.mp4,.mov,.avi,.mkv
