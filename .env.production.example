# --- Django Core Settings ---
SECRET_KEY=your-production-secret-key
DJANGO_SETTINGS_MODULE=inventory_management.settings.production

# --- Base de Datos Railway Production ---
DATABASE_URL=postgresql://user:password@your-production-host:port/dbname

# --- API externa FastAPI (Drive Service en Producci√≥n) ---
DRIVE_API_BASE_URL=https://your-production-api-domain.com
DRIVE_SHARED_SECRET=your-shared-secret-key

# --- Redis / Celery Settings Production ---
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --- Allowed Hosts Production ---
DJANGO_ALLOWED_HOSTS=your-production-domain.com,www.your-production-domain.com

# --- CORS Production ---
DJANGO_CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# --- CSRF Trusted Origins Production ---
DJANGO_CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.com
